@model IEnumerable<ASP_NET_MVC.Models.Item>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model){
    <a id="@item.ID.ToString()" href="@Url.Action("Items","Home",new {id=item.ID})"><p class="item">@item.ID @item.ItemText</p></a>
}

<h2>@ViewBag.Info</h2>
@using (Html.BeginForm("Create","Home")) {
    <fieldset> 
        <legend>Walking Skeleton</legend> 

        @Html.Hidden("ID")
 
        <div class="editor-label"> 
            @Html.Label("ItemText","Item Text:")
        </div> 
        <div class="editor-field">
            @Html.TextBox("ItemText") 
        </div>  
        <p> 
            <input type="submit" value="Add" id="add_button"/> 
        </p> 
    </fieldset> 
} 
